students = {}

def add_student():
    roll = input("Enter roll number: ")
    name = input("Enter name: ")
    students[roll] = name
    print("Student added successfully")

def view_students():
    for roll, name in students.items():
        print(roll, ":", name)

while True:
    print("\n1.Add 2.View 3.Exit")
    choice = input("Enter choice: ")

    if choice == "1":
        add_student()
    elif choice == "2":
        view_students()
    elif choice == "3":
        break
    else:
        print("Invalid choice")
